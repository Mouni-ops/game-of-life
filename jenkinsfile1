pipeline {
    agent ('mouniika-node')
    stages {
        stage ('git') {
            steps {
                git branch: 'master',
                url: 'https://github.com/Mouni-ops/game-of-life.git'
            }
        }
        stage ('build') {
            steps {
                mvn package
            }
        }
        stage ('postbuild') {
            steps {
                junit TestResultsPath: "gameoflife-web/target/surefire-reports/*.xml
                ArtifactsToBeArchive : "gameoflife-web/target/*.war
            }
        }

    }

}